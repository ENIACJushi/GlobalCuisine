			"minecraft:light_emission": 0.6,
			"minecraft:material_instances": { "*": { "texture": "tablet_1_amp", "render_method": "alpha_test" } },
			"minecraft:geometry": "geometry.tablet_amp",
			"minecraft:collision_box": { "origin": [ -7, 0, -4 ], "size": [ 14, 1, 8 ] },
			"minecraft:selection_box": { "origin": [ -7, 0, -4 ], "size": [ 14, 1, 8 ] },
