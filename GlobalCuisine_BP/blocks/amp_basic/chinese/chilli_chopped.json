		],
		"components": {
			"minecraft:liquid_detection": { "detection_rules": [ { "on_liquid_touches": "no_reaction", "can_contain_liquid": true } ] },
			"minecraft:destructible_by_mining": { "seconds_to_destroy": 0.2 },
			"minecraft:material_instances": { "*": { "texture": "chilli_chopped_amp", "render_method": "alpha_test" } },
			"minecraft:geometry": "geometry.chilli_chopped_amp",
			"minecraft:collision_box": { "origin": [ 0, 0, -3 ], "size": [ 6, 6, 6 ] },
			"minecraft:selection_box": { "origin": [ 0, 0, -3 ], "size": [ 6, 6, 6 ] },
			"minecraft:light_dampening": 1
		}
	}
}