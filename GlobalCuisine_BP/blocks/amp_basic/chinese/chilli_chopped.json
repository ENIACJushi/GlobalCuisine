{
	"format_version": "1.21.90",
	"minecraft:block": {
		"description": {
			"identifier": "amp:chilli_chopped",
			"menu_category": { "group": "amp:itemGroup.name.chinese", "category": "items" },
			"traits" : {
				"minecraft:placement_position": { "enabled_states": [ "minecraft:block_face" ] },
				"minecraft:placement_direction": { "enabled_states": ["minecraft:cardinal_direction"], "y_rotation_offset": 180.0 }
			}
		},
    "permutations": [
			{ "condition": "query.block_state('minecraft:cardinal_direction') == 'north'", "components": { "minecraft:transformation": { "rotation": [ 0, 0, 0 ] } } },
